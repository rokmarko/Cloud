{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Run KanardiaCloud",
            "type": "shell",
            "command": "/home/rok/Branch/NavSync/Protected/Cloud/venv/bin/python",
            "args": ["main.py"],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true,
                "clear": false
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": [],
            "detail": "Start the KanardiaCloud Flask application"
        },
        {
            "label": "Install Dependencies",
            "type": "shell",
            "command": "/home/rok/Branch/NavSync/Protected/Cloud/venv/bin/pip",
            "args": ["install", "-r", "requirements.txt"],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Install Python dependencies from requirements.txt"
        },
        {
            "label": "Run Tests",
            "type": "shell",
            "command": "/home/rok/Branch/NavSync/Protected/Cloud/venv/bin/pytest",
            "args": ["tests/", "-v"],
            "group": "test",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Run all tests with pytest"
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "/home/rok/Branch/NavSync/Protected/Cloud/venv/bin/black",
            "args": ["."],
            "group": "build",
            "presentation": {
                "echo": true,
                "reveal": "always",
                "focus": false,
                "panel": "shared"
            },
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "detail": "Format Python code with Black"
        }
    ]
}
